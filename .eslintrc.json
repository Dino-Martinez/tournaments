{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:@next/next/recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "react/jsx-uses-vars": 2,
        "indent": ["error", 2]
    },
    "ignorePatterns": "/docs"
}
